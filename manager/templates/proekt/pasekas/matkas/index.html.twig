    <div class="proekts-plr  ">
                <ul class = "plem__data plem__data--col">
                    <li class = "plem__name  plem__name-list--wid" >
                    ПлемМатка (по ссылке -расшифровка)
                    </li> 
                    <li class = "plem__name">Кат-рия</li>
                    <li class = "plem__name">ПерсонНомер</li>
                   
                    <li class = "plem__name">
                        Статус
                        {# {{ member_status(u4astnik.status) }}  #}
                    </li>
                    <li class = "plem__name">
                        Ред-вать
                    </li>
                </ul>
                {% for plemmatka in pagination %}

                <ul class = "plem__data">
                    <li class = "plem__name-list plem__name-list--wid plem-ramka mb0" >
                        <a class="" href="{{ path('proekt.pasekas.matkas.plemmatkas.show', {'plem_id': plemmatka.id}) }}">               
                            <strong class="strongo strongo--kras">{{ plemmatka.kategoria }}</strong>_{{ plemmatka.name }}              
                        </a> 
                    </li>
                    <li class = "plem__name-list">  {{ plemmatka.kategoria }} </li>
                    <li class = "plem__name-list"> {{ plemmatka.persona }} </li>
                    <li class = "plem__name-list">{{  plemmatka_status(plemmatka.status) }}</li>
                    <li class = "plem__name-list">
                        <a   href="{{ path('proekt.pasekas.matkas.plemmatkas.redaktorss.edit', {'plemmatka_id': plemmatka.id}) }}"  class="btnn btnn--mb1 " >
                            <div class="karandash">
                                <img src="{{ asset('assets/proekt/images/karandash.png') }}" alt="">
                            </div>
                        </a>
                    </li>
                </ul>
            

                {% endfor %}


       

    </div>
