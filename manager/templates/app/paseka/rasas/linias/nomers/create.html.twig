{% block breadcrumbs %}
	<ol class="breadcrumb">
		<li class="breadcrumb-item"><a href="{{ path('home') }}">Главная</a></li>
		<li class="breadcrumb-item"><a href="{{ path('paseka.rasas') }}">Раса </a></li>
		<li class="breadcrumb-item"><a href="{{ path('paseka.rasas') }}">Линия -- {{ linia.name }}</a></li>
		<li class="breadcrumb-item active">Добавить другую лини</li>
	</ol>
{% endblock %}

{% block body %}
<article class="rasa">
	<h1 class="rasa__title  "><strong>Раса </strong>:   {{ linia.title }}</h1>
	<div class="linia ">
		<h1 class="rasa__title  "><strong>Линия </strong>:  {{ linia.name }}</h1>
		<h3 class="rasa__title"> <strong>{{ name }} </strong> - таким будет сокращенное название <strong> линия_номер </strong>,
			оно формируется автоматически с учетом данных из БД</h3>
		<div class="nomer ">
			<h1 class="rasa__title  ">Добавить другой <strong> номер </strong> для <strong> линии </strong></h1>
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <div>
                <button type="submit" class="btn-my btn-my--sm">Добавить номер</button>
				<a href="{{ path('paseka.rasas.linias.nomers',{'linia_id': linia.id}) }}"
				   class="btn-my btn-my--sm"> Выйти из режима "Добавить"</a>
            </div>
            {{ form_end(form) }}
		
		</div>		
	</div>
</article><!-- rasas -->

{% endblock %}