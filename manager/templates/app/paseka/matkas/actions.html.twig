{% extends 'base.html.twig' %}

{% block title %}Tasks{% endblock %}

{% block breadcrumbs %}
    <ol class="breadcrumb">
{#        <li class="breadcrumb-item"><a href="{{ path('home') }}">Home</a></li>#}
{#        <li class="breadcrumb-item"><a href="{{ path('work') }}">Work</a></li>#}
{#        <li class="breadcrumb-item"><a href="{{ path('work.plemmatkas') }}">Projects</a></li>#}
        {% if plemmatka %}
            <li class="breadcrumb-item"><a href="{{ path('paseka.matkas.plemmatka.show', {'id': plemmatka.id}) }}">{{ plemmatka.name }}</a></li>
        {% endif %}
        <li class="breadcrumb-item active">Actions</li>
    </ol>
{% endblock %}

{% block body %}

{#    {% if plemmatka %}#}
{#        {% include 'app/work/plemmatkas/plemmatka/_tabs.html.twig' %}#}
{#    {% else %}#}
{#        {% include 'app/work/_tabs.html.twig' %}#}
{#    {% endif %}#}

    <div class="box">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Date</th>
                    {% if not plemmatka %}
                        <th>Project</th>
                    {% endif %}
                    <th>Task</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for action in pagination %}
                    <tr>
                        <td>{{ action.date|date('Y-m-d H:i:s') }}</td>
                        {% if not plemmatka %}
                            <td>
                                <a href="{{ path('paseka.matkas.plemmatka.show', {'id':  action.plemmatka_id}) }}">{{ action.plemmatka_name }}</a>
                            </td>
                        {% endif %}
                        <td>
                            {% if action.childmatka_id %}
                                <a href="{{ path('paseka.matkas.childmatkas.show', {'id':  action.childmatka_id}) }}">{{ action.childmatka_name }}</a>
                            {% endif %}
                        </td>
                        <td>{{ paseka_matkas_action_row(action) }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>

{% endblock %}