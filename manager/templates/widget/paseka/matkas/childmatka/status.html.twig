{% if status == 'Новая' %}
    <span class="badge badge-secondary">Новая</span>
{% elseif status == 'Заказана' %}
    <span class="badge badge-info">Заказана</span>
{% elseif status == 'В работе' %}
    <span class="badge badge-primary">В работе</span>
{% elseif status == 'Вопрос' %}
    <span class="badge badge-warning">Вопрос</span>
{% elseif status == 'Отклонена' %}
    <span class="badge badge-danger">Отклонена</span>
{% elseif status == 'Тест завершено' %}
    <span class="badge badge-success">Завершено</span>
{% elseif status == 'archived' %}
    <span class="badge badge-dark">Архивирована</span>
{% endif %}
